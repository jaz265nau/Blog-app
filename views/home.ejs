<%- include("partials/header") %>
<h1>My Blog</h1>
<a href="/new">Create New Post</a>
<div class="posts">
  <% posts.forEach(post => { %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <form action="/delete/<%= post.id %>" method="POST" style="display:inline">
        <button type="submit">Delete</button>
      </form>
      <a href="/edit/<%= post.id %>">Edit</a>
    </div>
  <% }) %>
</div>
<%- include("partials/footer") %>
